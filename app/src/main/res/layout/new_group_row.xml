<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp" android:paddingLeft="16dp"
    android:paddingRight="16dp" android:paddingTop="16dp">

    <CheckBox
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newGroup_box"
        android:layout_alignBaseline="@+id/newGroup_name"
        android:layout_alignBottom="@+id/newGroup_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:checked="false" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newGroup_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#444444"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_toLeftOf="@+id/newGroup_box"
        android:layout_toStartOf="@+id/newGroup_box" />
</RelativeLayout>